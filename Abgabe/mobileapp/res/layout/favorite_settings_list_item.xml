<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:orientation="horizontal" >
 
	<ImageView 
        android:id="@+id/fsl_imgv_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/start_logo"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:padding="3dp"
        android:layout_marginRight="5dp"
        style="@style/iconlayout"
        />

    <TextView
        android:id="@+id/fsl_txtv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/fsl_imgv_icon"
        android:textSize="@dimen/header_txt" />

    <CheckBox
        android:id="@+id/fsl_checkbox"
        android:focusable="false" 
		android:focusableInTouchMode="false"
		android:clickable="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true" />
 
</RelativeLayout>