<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context=".StartActivity" 
    style="@style/relativelayout">
        
    <Button
        android:id="@+id/home_btn_browse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="8dp"
        android:onClick="viewCategories"
        android:text="@string/home_btn_browse" 
        style="@style/buttonstyle"/>

    <Button
        android:id="@+id/home_btn_myevents"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="4dp"
        android:onClick="viewMyEvents"
        android:text="@string/home_btn_myevents"
        style="@style/buttonstyle" />

    <TextView
        android:id="@+id/home_txt_favorites"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:text="@string/home_txt_favorites"
        android:textSize="@dimen/header_txt" />

    <GridView
        android:id="@+id/home_grid_favorites"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:columnWidth="60dp"
        android:gravity="center"
        android:horizontalSpacing="20dp"
        android:numColumns="auto_fit"
        android:verticalSpacing="10dp" >
    </GridView>

</LinearLayout>