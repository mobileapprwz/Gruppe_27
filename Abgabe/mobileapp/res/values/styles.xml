<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="mainstyle" parent="@android:style/Theme.Holo">
        <item name="android:animateOnClick">true</item>
        <item name="android:animateLayoutChanges">true</item>
        <item name="android:windowActionBar">true</item>
        
        <item name="android:popupMenuStyle">@style/popupstyle</item>
       
	    <item name="android:popupBackground">@drawable/popup</item>
    </style>

     <style name="actionmenutext" parent="@android:style/Widget.Holo">
	   <item name="android:actionMenuTextColor">#24598a</item>
    </style>
    
    <style name="buttonstyle">
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">bold</item>
        <item name="android:animateOnClick">true</item>
        <item name="android:animateLayoutChanges">true</item>
        <item name="android:background">@drawable/button</item>
        <item name="android:alpha">0.6</item>
    </style>
	
     <style name="popupstyle">
	    <item name="android:textColor">#00FF00</item>
	    <item name="android:textSize">8sp</item>
	    <item name="android:background">@drawable/iconlayout</item>
	</style>
     
     <style name="listlayout">
        <item name="android:background">@drawable/listclick</item>
        <item name="android:alpha">0.8</item>
    </style>
    
      <style name="relativelayout">
        <item name="android:background">@drawable/background</item>
    </style>

          <style name="iconlayout">
        	<item name="android:background">@drawable/iconlayout</item>
        	<item name="android:textColor">#00FF00</item>
        	<item name="android:width">48dp</item>
         	<item name="android:height">48dp</item>
         	<item name="android:alpha">1.0</item>
    </style>
         <style name="startbackground">
        <item name="android:background">@drawable/background_start</item>
    </style>
</resources>

